<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="135dp"
        android:layout_height="57dp"
        android:layout_marginBottom="136dp"
        android:background="#333232"
        android:fontFamily="@font/carter_one"
        android:onClick="savedata"
        android:text="Rigester"
        android:textColor="#ffff"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.199"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button2"
        android:layout_width="135dp"
        android:layout_height="57dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="136dp"
        android:background="#CA1010"
        android:fontFamily="@font/carter_one"
        android:onClick="delet"
        android:text="Cancel"
        android:textColor="#ffff"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="258dp"
        android:layout_height="42dp"
        android:layout_marginTop="56dp"
        android:shadowColor="#000A0A0A"
        android:text="Registration Form"
        android:textColor="#ffff"
        android:textSize="24sp"
        app:fontFamily="@font/carter_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.624"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="313dp"

        android:layout_marginTop="160dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_person_black_24dp" />

            <EditText
                android:id="@+id/txt1"
                android:layout_width="189dp"

                android:layout_height="89dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/carter_one"
                android:hint="Your name"
                android:inputType="textPersonName"
                android:textColor="#ffff"
                android:textColorHighlight="#CA1010"

                android:textColorHint="#AFAAAA"
                android:textColorLink="#CA1010" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_mail_black_24dp" />

            <EditText
                android:id="@+id/txt2"
                android:layout_width="218dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/carter_one"

                android:hint="Your Email"
                android:inputType="textPersonName"
                android:textColor="#ffff"
                android:textColorHighlight="#CA1010"
                android:textColorHint="#AFAAAA"
                android:textColorLink="#CA1010" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_phone_android_black_24dp" />

            <EditText
                android:id="@+id/txt3"
                android:layout_width="224dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/carter_one"

                android:hint="Your number"
                android:inputType="phone"
                android:textColor="#ffff"
                android:textColorHighlight="#CA1010"
                android:textColorHint="#AFAAAA"
                android:textColorLink="#CA1010" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="8dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_lock_black_24dp" />

            <EditText
                android:id="@+id/txt4"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/carter_one"
                android:hint="pass"

                android:inputType="textPassword"
                android:textColorHighlight="#CA1010"
                android:textColorHint="#AFAAAA"
                android:textColorLink="#CA1010" />
            android:textColor="#ffff"

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>