<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F"
    tools:context=".Activity2">

    <Button
        android:id="@+id/button"
        android:layout_width="135dp"
        android:layout_height="57dp"
        android:layout_marginBottom="144dp"
        android:background="#333232"
        android:fontFamily="@font/carter_one"
        android:onClick="back"
        android:text="back"
        android:textColor="#ffff"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="375dp"
        android:layout_height="114dp"
        android:layout_marginTop="44dp"
        android:shadowColor="#000A0A0A"
        android:text="Registration Information"
        android:textColor="#ffff"
        android:textSize="24sp"
        app:fontFamily="@font/carter_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="416dp"

        android:layout_height="313dp"
        android:layout_marginTop="160dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="144dp"
                android:layout_height="72dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/carter_one"
                android:text="Username :"
                android:textColor="#F2FFFEFE"

                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/carter_one"
                android:textColor="#FDF9F9"

                android:textColorHighlight="#CA1010"
                android:textColorLink="#CA1010"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="106dp"
                android:layout_height="72dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/carter_one"
                android:text="Email :"
                android:textColor="#ffff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/carter_one"

                android:textColor="#FFFEFE"

                android:textColorHighlight="#CA1010"
                android:textColorLink="#CA1010"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="150dp"
                android:layout_height="72dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/carter_one"
                android:text="Number :"
                android:textColor="#ffff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/carter_one"

                android:textColor="#FFF7F7"

                android:textColorHighlight="#CA1010"

                android:textColorLink="#CA1010"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="149dp"
                android:layout_height="72dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/carter_one"
                android:text="password :"
                android:textColor="#ffff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/carter_one"

                android:textColor="#FFFDFD"

                android:textColorHighlight="#CA1010"

                android:textColorLink="#CA1010"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>